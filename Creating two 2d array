#include<stdio.h>
#include<conio.h>
int main(){
    int i,j,arr1[2][2],arr2[2][2],sum;
    
    printf("\tENTER THE ELEMENT TO BE STORED IN THE 2D ARRAY\n");
    
    printf("\t1ST ARRAY ELEMENTS :");
    
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            printf("\nEnter the number of : rows : %d columns : %d = ",i,j);
            scanf("%d",&arr1[i][j]);
        }
    }
    
    printf("\t2ND ARRAY ELEMENTS :");
    
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            printf("\nEnter the number of : rows : %d columns : %d = ",i,j);
            scanf("%d",&arr2[i][j]);
        }
    }
    
    printf("\n\tThe elements that are stored in the array : \n");
    
    printf("\t1ST ARRAY ELEMENTS :");
    
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            printf("\n\nThe array elements of : rows : %d columns : %d = %d",i,j,arr1[i][j]);
        }
    }
    
    printf("\t\n2ND ARRAY ELEMENTS :");
    
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            printf("\n\nThe array elements of : rows : %d columns : %d = %d",i,j,arr2[i][j]);
        }
    }
    
    printf("\t\nPERFORMING ADDITION OF THE @ ARRAY'S : \n");
    
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            printf("\nTHE ADDITIIION IS : %d ",arr1[i][j]+arr2[i][j]);
            
        }
        
    }
    
    getchar();
    return 0;
}
