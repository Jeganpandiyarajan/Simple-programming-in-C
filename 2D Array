#include<stdio.h>
#include<conio.h>
int main(){
    int i,j,arr[2][2];
    printf("\tENTER THE ELEMENT TO BE STORED IN THE 2D ARRAY");
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            printf("\nEnter the number of : rows : %d columns : %d = ",i,j);
            scanf("%d",&arr[i][j]);
        }
    }
    printf("\n\tThe elementa in  the array : ");
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            printf("\n\nThe array elements of : rows : %d columns : %d = %d",i,j,arr[i][j]);
        }
    }
    getchar();
    return 0;
}
